<?php

	$data = json_decode(file_get_contents("php://input"));

	$host = "localhost";
	$user = "vinikAdmin";
	$pass = "2B&WXqbJZ=T9";
	$db = "vinik";

	$con = new mysqli($host, $user, $pass, $db);

	if($con->connection_error) {
		die("DB connection failed:" . $con->connection_error);
	}

	$sql = "DELETE FROM `leads` WHERE `id` = $data->id";

	$qry = $con->query($sql);

	$sql = "SELECT * FROM `leads` ORDER BY `id` DESC";

	$qry = $con->query($sql);

	$data = array();

	if($qry->num_rows > 0) {
		while($row = $qry->fetch_object()) {
			$data[] = $row;
		}
	} else {
		$data[] = null;
	}

	$con->close();

	echo json_encode($data);
